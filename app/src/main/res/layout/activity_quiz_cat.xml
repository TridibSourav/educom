<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="10">


        <!-- First row -->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!-- First item -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card_view"
                    android:layout_gravity="center"
                    android:onClick="ShowQuizList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    card_view:cardCornerRadius="20dp"
                    android:layout_margin="10dp">

                    <TextView
                        android:id="@+id/info_text"
                        android:text="Fundamental of computer"
                        android:textStyle="bold"
                        android:layout_gravity="bottom"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:drawableTop="@drawable/pc"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </android.support.v7.widget.CardView>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <android.support.v7.widget.CardView
                    android:onClick="showBooks"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card_view2"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    card_view:cardCornerRadius="20dp"
                    android:layout_margin="10dp">

                    <TextView
                        android:id="@+id/info_text2"
                        android:text="Programming"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:layout_gravity="bottom"
                        android:gravity="center"
                        android:drawableTop="@drawable/program"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </android.support.v7.widget.CardView>

            </LinearLayout>

        </LinearLayout>
        <!--text-->
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <ImageView
                android:layout_width="41dp"
                android:layout_height="41dp"
                android:src="@drawable/gonef" />
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:text="quiz"
                android:textColor="#6dc9c9"
                android:textSize="30dp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- 2nd row -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!-- First item -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card_view3"
                    android:layout_gravity="center"
                    android:onClick="quiz"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    card_view:cardCornerRadius="20dp"
                    android:layout_margin="10dp">

                    <TextView
                        android:id="@+id/info_text3"
                        android:text="Web Developing"
                        android:layout_gravity="bottom"
                        android:gravity="center"
                        android:drawableTop="@drawable/web"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </android.support.v7.widget.CardView>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card_view4"
                    android:layout_gravity="center"
                    android:onClick="demo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    card_view:cardCornerRadius="20dp"
                    android:layout_margin="10dp">

                    <TextView
                        android:id="@+id/info_text4"
                        android:text="Database"
                        android:layout_gravity="bottom"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:drawableTop="@drawable/datablue"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </android.support.v7.widget.CardView>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</ScrollView>